@model IEnumerable<WebApplication1.Models.Students>

@{
    ViewData["Title"] = "StudentsList";
}

<h2>StudentsList</h2>

<p>
    <a asp-action="AddStudent">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditStudent", new { id=item.Id/* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "ViewStudent", new { id = item.Id/* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "DeleteStudent", new { id=item.Id/* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
